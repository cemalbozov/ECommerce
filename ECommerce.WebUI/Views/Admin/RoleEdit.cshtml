@model RoleDetails

<section>
    <div class="container my-5">
        <div class="row gy-3">
            @await Html.PartialAsync("_sidebar")
            <div class="col-lg-9">

                <div class="acc-title">@Model.Role.Name Rolünü Düzenle</div>

                <div class="row">
                    <form asp-controller="Admin" asp-action="RoleEdit">
                        <input type="hidden" name="RoleId" value="@Model.Role.Id" />
                        <input type="hidden" name="RoleName" value="@Model.Role.Name" />
                        <h6 class="bg-primary text-white p-1">Kullanıcı Ekle</h6>

                        <table class="table table-bordered align-middle">
                            @if (Model.NonMembers.Count() == 0)
                            {
                                <tr>
                                    <td colspan="2">Tüm Kullanıcılar Role ait</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var user in Model.NonMembers)
                                {
                                    <tr>
                                        <td>@user.Email</td>
                                        <td style="width:100px;">
                                            <input type="checkbox" name="IdstoAdd" value="@user.Id" />
                                        </td>
                                    </tr>
                                }
                            }
                        </table>

                        <h6 class="bg-primary text-white p-1">Kullanıcı Çıkar</h6>

                        <table class="table table-bordered align-middle">
                            @if (Model.Members.Count() == 0)
                            {
                                <tr>
                                    <td colspan="2">Role ait kullanıcı yok.</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var user in Model.Members)
                                {
                                    <tr>
                                        <td>@user.Email</td>
                                        <td style="width:100px;">
                                            <input type="checkbox" name="IdstoDelete" value="@user.Id" />
                                        </td>
                                    </tr>
                                }
                            }
                        </table>
                        <div class="col-12 text-center my-4">
                            <button type="submit" class="btn btn-secondary">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@model IEnumerable<IdentityRole>

<section>
    <div class="container my-5">
        <div class="row gy-3">
            @await Html.PartialAsync("_sidebar")
            <div class="col-lg-9">

                <div class="acc-title">Roller</div>

                <a href="/admin/roles/create" class="btn btn-primary mb-3">Rol Ekle</a>
                <div class="row">
                    @if (Model.Count() > 0)
                    {
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <td style="width: 250px;">Id</td>
                                    <td >Rol Adı</td>
                                    <td style="width: 160px;"></td>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var role in Model)
                                {
                                    <tr>
                                        <td>@role.Id</td>
                                        <td>@role.Name</td>
                                        <td class="text-center align-items-center">
                                            <a href="/admin/roles/@role.Id" class="btn btn-outline-secondary btn-icon mr-2">
                                                <i class="fa-solid fa-pen-to-square btn-icon"></i>
                                            </a>
                                            <form action="/admin/roles/delete" method="POST" style="display:inline;">
                                                <input type="hidden" name="Id" value="@role.Id">
                                                <button type="submit" class="btn btn-outline-danger btn-icon" onclick="return confirm('Silmek istediğinizden emin misiniz ?')">
                                                    <i class="fa-solid fa-trash btn-icon"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <h3>Rol Bulunamadı</h3>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
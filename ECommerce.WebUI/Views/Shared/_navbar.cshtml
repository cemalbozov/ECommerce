<header>
    <section class="top-bar">
        <div class="container">
            <div class="row gy-3 align-items-center">
                <div class="col-lg-2 col-sm-4 col-4">
                    <a href="/" class="navbar-brand fw-bold">ECommerce</a>
                </div>
                <div class="order-lg-last col-lg-5 col-sm-8 col-8">
                    <div class="text-end">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="/account/manage" class="btn btn-outline-primary">
                                <i class="fa fa-user"></i> <span class="ms-1 d-none d-md-inline-block">Hesabım</span>
                            </a>
                            <a href="/account/logout" class="btn btn-outline-primary ">
                                <i class="fa-solid fa-right-from-bracket"></i> <span class="ms-1 d-none d-md-inline-block">Çıkış</span>
                            </a>
                            <a href="/account/favorites" class="btn btn-outline-primary ">
                                <i class="fa fa-heart"></i> <span class="ms-1 d-none d-md-inline-block">Favorilerim</span>
                            </a>
                        }
                        else
                        {
                            <a href="/account/login" class="btn btn-outline-primary ">
                                <i class="fa-solid fa-right-to-bracket"></i>  <span class="ms-1 d-none d-md-inline-block">Giriş Yap</span>
                            </a>
                            <a href="/account/register" class="btn btn-outline-primary ">
                                <i class="fa-solid fa-user-plus"></i> <span class="ms-1 d-none d-md-inline-block">Kayıt Ol</span>
                            </a>
                        }
                        <a href="/cart" class="btn btn-outline-primary">
                            <i class="fa fa-shopping-cart"></i> <span class="ms-1 d-none d-md-inline-block">Sepetim</span>
                        </a>
                    </div>
                </div>
                <div class="col-lg-5 col-12">
                    <form action="/search" method="get">
                        <div class="input-group">
                            <input type="text" name="q" class="form-control" placeholder="Ürün,kategori veya marka ara">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</header>
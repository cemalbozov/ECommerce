@model UserDetailsModel

<div class="col-lg-3">
    <div id="accName" class="mb-5">
        <div class="text-capitalize" id="username">
            @Model.FirstName @Model.LastName
        </div>

        <div class="logout"><a href="/account/logout">Çıkış</a></div>
    </div>
    <ul id="accNav" class="nav nav-pills flex-lg-column flex-row flex-nowrap">
        <li class="nav-item">
            <a href="/account/orders" class="nav-link">Siparişlerim</a>
        </li>
        <li class="nav-item">
            <a href="/account/adresses" class="nav-link">Adreslerim</a>
        </li>
        <li class="nav-item">
            <a href="/account/manage" class="nav-link">Üyelik Bilgilerim</a>
        </li>
        @if (User.IsInRole("Admin"))
        {
            <li class="nav-item ">
                <a asp-controller="Admin" asp-action="ProductList" class="nav-link">Admin</a>
            </li>
        }
    </ul>
</div>
@model ECommerce.WebUI.ViewModels.ProductListViewModel

@{
    var products = Model.Products;
}

@await Html.PartialAsync("_campaignslider")

@if (products.Count == 0)
{
    @await Html.PartialAsync("_noproduct")
}
else
{
    <section class="pt-3">
        <div>
            <header>
                <h3 class="mb-md-3 mb-0">Son Eklenenler</h3>
            </header>
            <div class="row">
                @foreach (var item in products)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        @await Html.PartialAsync("_product", item)
                    </div>
                }
            </div>
        </div>
    </section>
}
